<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Recorder" parent="Theme.Material3.DynamicColors.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Recorder" parent="Base.Theme.Recorder" />

    <style name="Theme.Recorder.SearchTheme" parent="Theme.Recorder">
        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>
    </style>
</resources>